.background{
  width: 100%;
  height: 100%;

  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.header{
  display: grid;
  grid-template-columns: 0% 1fr;
  align-content: center;
  font-weight: bold;
  font-size: 20px;

}

.header-text{
  color: black;
  padding-top: 15%; 
  align-self: center;
  justify-self: center;
}

.position_con{
  display: grid;
   position: fixed;
   bottom: 23%;
   width: 100%;
  justify-items: center;
}

.sign-inMessage{
  color: black;
  font-size: 25rpx;
  padding-top: 30rpx; 
}

.log{
  width: 450rpx;
  border-radius: 50rpx;
  background-color: #a2a7fd;
  color: white;
  font-size: 40rpx;
}

.test{
  display: grid;
  grid-template-columns: 40rpx 195rpx auto 50rpx 40rpx;
  padding-top: 15%;
}
.test-1{
  grid-column-start: 2;
  color: #686de0;
  align-self: center;
  justify-self: center;
}

.test-2{
  display: grid;
  grid-template-columns: 40rpx 195rpx auto 50rpx 40rpx;
  padding-top: 8%;
}

